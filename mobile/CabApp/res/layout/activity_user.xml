<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@layout/header_gradient"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".UserActivity" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/estimatedTime"
        android:layout_centerHorizontal="true"
        android:src="@drawable/haologo" />

    <EditText
        android:id="@+id/estimatedTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Estimated Time"
        android:inputType="number" />

    <ImageButton
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@null"
        android:src="@drawable/power"
        android:text="Log Out" />
    
    <ImageButton
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@null"
        android:src="@drawable/close"
        android:text="End Journey" />

    <RelativeLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imageView1"
        android:layout_marginTop="97dp"
        android:orientation="vertical" >

        <Button
            android:id="@+id/reachedHome"
            android:layout_width="224dp"
            android:layout_height="120dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/custom_btn"
            android:text="Reached Home" />

        <Button
            android:id="@+id/passengerOnBoard"
            android:layout_width="224dp"
            android:layout_height="120dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/custom_btn"
            android:text="Passenger On Board" />

        <Button
            android:id="@+id/endJourney"
            android:layout_width="224dp"
            android:layout_height="120dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/custom_btn"
            android:text="End Journey" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:maxLines="2"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColorHint="@color/SeaGreen" />

</RelativeLayout>